<div class="add-photo-container">

  <div class="input-container">
    <div class="row">
      <%= form_for [@trip, @photo], class: 'col s12 m6 offset-m3' do |f|%>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :caption %>
            <%= f.text_field :caption %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :location %>
            <%= f.text_field :location %>
          </div>
        </div>


      <% end %>
    </div>
  </div>
</div>

<%= form_for [@trip, @photo] do |f|%>
  <%= f.label :caption %>
  <%= f.text_field :caption %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <span>Upload New Picture</span>
  <%= f.file_field :trip_photo %>
  <%= f.hidden_field :trip_photo_cache %>
  <%= text_field_tag :trip_photo, nil, class: "file-path validate" %>
  
  <%= button_tag( :class => "btn waves-effect waves-light" ) do %>
    Submit <i class='material-icons right'>send</i>
  <% end %>
<% end %>

