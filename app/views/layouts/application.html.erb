<!DOCTYPE html>
<html>
<head>
  <title>Peregrine</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!--Import Google Icon Font-->
  <link rel="stylesheet" href="http://fonts.googleapis.com/icon?family=Material+Icons">
  <!--Import materialize.css-->
  <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css"> -->
  
  <!--Import MD Iconic Font -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  <!-- MapBox-->
  <script src='https://api.tiles.mapbox.com/mapbox.js/v2.2.4/mapbox.js'></script>
  <link href='https://api.tiles.mapbox.com/mapbox.js/v2.2.4/mapbox.css' rel='stylesheet' />

  <% if user_signed_in? %>
    <meta name="current-user-id" content="<%= current_user.id %>"/>
  <% end %>
  
</head>


<body data-no-turbolink="true">
  
  <!-- Dropdown Structure -->
  <% if user_signed_in? %>
  <ul id="dropdown1" class="dropdown-content">
    <%= render "layouts/user_menu" %>
  </ul>
  <% end %>

  <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo center  ">-Logo-</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <!-- Dropdown Trigger -->
        <% if user_signed_in? %>
          <li>
            <a class="dropdown-button" data-beloworigin="true" data-hover="true" href="#!" data-activates="dropdown1">
              <i class='material-icons left'>view_module</i><%= user_full_name %> <i class="material-icons right">arrow_drop_down</i>
            </a>
          </li>
        <% else %>
          <%= render "layouts/signup_menu" %>
        <% end %>
      </ul>
      <ul class="side-nav" id="mobile-demo">
        <% if user_signed_in? %>
          <%= render "layouts/user_menu" %>
        <% else %>
          <%= render "layouts/signup_menu" %>
        <% end %>
  
      </ul>
    </div>
  </nav>


<%= yield %>


  <!--Import jQuery before materialize.js-->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
</body>
</html>
