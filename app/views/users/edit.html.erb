<div class="container edit-account-container">

  <div>
    <%= @user.errors.full_messages.join(", ") %>
  </div>

  <h4 class="center-align">Edit Account</h4>

  <div class="row">
    <%= form_for @user, html: {class: "col s12"} do |f| %>
      <div class="row">
        <div class="basic-edit col s6">
          <div class="row">
            <div class="input-field col s12">
              <%= f.label :username %>
              <%= f.text_field :username %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: "validate" %>
            </div>
            <div class="input-field col s6">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "validate" %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.label :email, data: {error: 'invalid email', success: "valid"} %>
              <%= f.email_field :email, class: "validate" %>
            </div>
          </div>
        </div> <!-- /basic-edit -->
        <div class="photo-edit col s6">
          This is editing something<!-- profile picture -->
        </div>
      </div> <!-- End top row -->
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password, "New Password" %>
          <%= f.password_field :password, class: "validate" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password_confirmation, "Confirm New Password" %>
          <%= f.password_field :password_confirmation, class: "validate" %>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <%= button_tag( :class => "btn waves-effect waves-light" ) do %>
            Submit <i class='material-icons right'>send</i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

</div>
