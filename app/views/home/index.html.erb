<%#= flash[:notice] %>

<div id="home-wrapper">
  <div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
      <div class="container">
        <br><br>
        <h1 class="header center">Peregrine</h1>
        <div class="row center">
          <h5 class="header col s12">Share. Connect. Explore</h5>
        </div>
        <div class="row center">
          <a href="#" class="btn-large waves-effect waves-light">Get started</a>
        </div>
        <br><br>

      </div>
    </div>
    <div class="parallax"><%= image_tag "background1" %></div>
  </div>

  <div class="container">
    <div class="section">

      <!--   Icon Section   -->
      <div class="row">
        <div class="col s12 m4">
          <div class="icon-block">
            <h2 class="center brown-text"><i class="material-icons">camera_alt</i></h2>
            <h5 class="center top-hd">Capture your Journey</h5>

            <p class="light">Photographing a culture in the here and now often means photographing the intersection of the present with the past</p>
          </div>
        </div>

        <div class="col s12 m4">
          <div class="icon-block">
            <h2 class="center brown-text"><i class="material-icons">group</i></h2>
            <h5 class="center">Find Friends</h5>

            <p class="light">Use Peregrine to find fellow travellors of similar interests. View their past and future trips. Stay connected and travel the world together through shared images and experiences.</p>
          </div>
        </div>

        <div class="col s12 m4">
          <div class="icon-block">
            <h2 class="center brown-text"><i class="material-icons">flight_takeoff</i></h2>
            <h5 class="center">Travel</h5>

            <p class="light">Learn about new locations to explore and interesting events to expereience. Search the network for potential travel buddies and explore the world together.</p>
          </div>
        </div>
      </div>

    </div>
  </div>


  <div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
      <div class="container">
        <div class="row center">
          <h5 class="header col s12 light middle-hd">An exploration tool to help achieve your perfect trip</h5>
        </div>
      </div>
    </div>
    <div class="parallax"><<%= image_tag "background2" %></div>
  </div>

  <div class="container recent_photo_container">
    <div class="section">

      <div class="row">
        <div class="col s12 center">
          <h3><i class="mdi-content-send brown-text"></i></h3>
          <h4>Latest Photos</h4>
          <%= render "recent_photos" %>
        </div>
      </div>

    </div>
  </div>


  <div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
      <div class="container">
        <div class="row center">
          <h5 class="header col s12 light bottom-hd">Guide others through the adventure of their lifetime</h5>
        </div>
      </div>
    </div>
    <div class="parallax"><%= image_tag "background3" %></div>
  </div>

  <footer class="page-footer">
    <div class="footer-copyright">
      <div class="container">
      <h6>PEREGRINE &copy;</h6>
      </div>
    </div>
  </footer>
</div>


<script>
  
 $(document).ready(function(){
    $('.materialboxed').materialbox();
  });

</script>
